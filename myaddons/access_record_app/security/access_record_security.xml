<?xml version="1.0" ?>
<odoo>
    <record id="module_access_record_category" model="ir.module.category">
        <field name="name">Access Record</field>
    </record>
    
    <record id="access_record_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_access_record_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="access_record_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_access_record_category" />
        <field name="implied_ids" eval="[(4, ref('access_record_group_user'))]" />
        <field name="users" eval="[
                    (4, ref('base.user_root')),
                    (4, ref('base.user_admin'))
                ]" />
    </record>
</odoo>
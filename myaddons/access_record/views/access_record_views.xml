<?xml version="1.0"?>
<odoo>

    <record id="view_access_record_form" model="ir.ui.view">
        <field name="name">access.record.form</field>
        <field name="model">res.record</field>
        <field name="arch" type="xml">
            <form string="Access Record">
                <group>
                    <field name="access_type" widget="radio" options="{'horizontal': true}" />
                    <field name="partner_id" />
                    <field name="access_time" />
                    <field name="access_feedback" />
                    <field name="access_recommend" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_access_record_tree" model="ir.ui.view">
        <field name="name">access.record.tree</field>
        <field name="model">res.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="access_type" />
                <field name="access_time" />
                <field name="partner_id" />
                <field name="access_feedback" />
                <field name="access_recommend" />
            </tree>
        </field>
    </record>

    <record id="view_res_partner_record_form" model="ir.ui.view">
        <field name="name">res.partner.record.form</field>
        <field name="model">res.partner.record</field>
        <field name="arch" type="xml">
            <form string="Access Record">
                <group>
                    <field name="record_id" />
                    <field name="record_type" widget="radio" options="{'horizontal': true}" />
                    <field name="record_partner_id" />
                    <field name="record_time" />
                    <field name="record_feedback" />
                    <field name="record_recommend" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_res_partner_record_tree" model="ir.ui.view">
        <field name="name">res.partner.record.tree</field>
        <field name="model">res.partner.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="record_type" />
                <field name="record_time" />
                <field name="record_partner_id" />
                <field name="record_feedback" />
                <field name="record_recommend" />
            </tree>
        </field>
    </record>

